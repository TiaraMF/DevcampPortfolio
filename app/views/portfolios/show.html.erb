<hr>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> /
      <%= link_to 'Destroy', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <hr>

      <p><%= @portfolio_item.body %></p>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>